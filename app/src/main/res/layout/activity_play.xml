<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33485f"
    tools:context=".PlayActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="130dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txvDiemCaoNhat"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/bg_btn_play"
            android:gravity="center"
            android:text="best"
            android:textColor="#000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txvDiem"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:background="@drawable/bg_btn_play"
            android:gravity="center"
            android:text="5"
            android:textColor="#000"
            android:textSize="25sp"
            android:textStyle="bold" />


        <GridView
            android:id="@+id/gdvOHien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_gdv_play"
            android:padding="5dp"></GridView>

        <GridView
            android:id="@+id/gdvOAn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gdv_play"
            android:numColumns="8"
            android:padding="5dp"></GridView>

    </LinearLayout>

    <TextView
        android:id="@+id/txvTimer"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:background="@drawable/bg_btn_play"
        android:gravity="center"
        android:text="time"
        android:textColor="#000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txvQuaMan"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_btn_play"
        android:gravity="center"
        android:onClick="quaMan"
        android:text="Qua MÃ n"
        android:textColor="#000"
        android:textSize="25sp"
        android:textStyle="bold" />
</RelativeLayout>